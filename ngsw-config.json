{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.js"
        ],
        "urls": [
          "https://fonts.googleapis.com/icon?family=Material+Icons",
          "https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500&display=swap"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(eot|svg|cur|jpg|png|webp|gif|otf|ttf|woff|woff2|ani)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "xhr",
      "urls": ["/**"],
      "cacheConfig": {
        "maxSize": 10,
        "maxAge": "1d",
        "timeout": "10s",
        "strategy": "freshness"
      }
    },
    {
      "name": "avatar",
      "urls": ["https://pbs.twimg.com/profile_images/**"],
      "cacheConfig": {
        "maxSize": 1,
        "maxAge": "1d",
        "timeout": "5s",
        "strategy": "performance"
      }
    },
    {
      "name": "storage",
      "urls": ["https://firebasestorage.googleapis.com/**"],
      "cacheConfig": {
        "maxSize": 1,
        "maxAge": "1d",
        "timeout": "5s",
        "strategy": "performance"
      }
    }
  ]
}
